@inject StateContainer StateContainer
@inject LocalizationService Loc


<MudTextField T="string" 
              Value="@SearchStringValue"
              OnDebounceIntervalElapsed="OnSearchStringChanged"
              Placeholder="@Loc.Get(RS.TableSearch)"
              Clearable="true" Immediate="true" DebounceInterval="500" AutoFocus="@StateContainer.IsNotMobile"
              Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
              IconSize="Size.Medium" Class="mt-4 me-2">
</MudTextField>

@code {
    [Parameter]
    public string? SearchStringValue { get; set; }

    [Parameter]
    public EventCallback<string> OnSearchStringChanged { get; set; }
}
