@if (!string.IsNullOrEmpty(Message))
{
    <MudAlert Severity="@Severity" Variant="Variant.Outlined" Class="mb-3" ShowCloseIcon="ShowCloseIcon" CloseIconClicked="(() => Message=string.Empty)">
        @Message
    </MudAlert>
}

@code {
    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public bool ShowCloseIcon { get; set; } = true;

    [Parameter]
    public Severity Severity { get; set; } = Severity.Error;
}
